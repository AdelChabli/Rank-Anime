<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient

                android:startColor="#a862de"
                android:endColor="#800080"
                android:angle="0" />

            <corners
                android:radius="20dp" />

            <padding
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"
                android:left="10dp" />

        </shape>
    </item>

    <item>
        <shape>
            <gradient

                android:startColor="#ad13ad"
                android:endColor="#ffc0cb"
                android:angle="-135" />

            <corners
                android:radius="20dp" />

            <padding
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"
                android:left="10dp" />

        </shape>
    </item>

</selector>